#!/usr/bin/env bash

set -uo pipefail

declare -a PREREQS=("cpio")
for prereq in "${PREREQS[@]}"; do
	if ! hash "$prereq" 2>/dev/null; then
		echo "[!] $prereq not found but required" >&2
		exit 1
	fi
done

if [ "$#" -ne 1 ]; then
	echo "[!] missing archive name" >&2
	exit 2
fi

if [ ! -f "$1" ]; then
	echo "[!] archive not found" >&2
	exit 3
fi

cpio -idv < "$1"

