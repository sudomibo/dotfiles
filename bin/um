#!/usr/bin/env bash

set -uo pipefail

isc='secbox osc -A https://api.suse.de'

if [ "$#" -lt 1 ]; then
	echo "[!] missing op argument" >&2
	exit 1
fi

case "$1" in
"revoke_rr")
	if [ "$#" -ne 2 ]; then
		echo "[!] missing #RR" >&2
		exit 3
	fi
	if [[ ! $2 =~ ^[0-9]{5}$ ]]; then
		echo "[!] RR should be a 5-digit number" >&2
		exit 4
	fi
	echo "[i] isc rq revoke -m 'new submission' $2"
	read -p "[?] Are you sure? " -n 1 -r
	echo
	if [[ "$REPLY" =~ ^[yY]$ ]]; then
		result=$($isc rq revoke -m 'new submission' "$2")
		echo "$?: $result"
	fi
	exit 0
;;
"merge_sr_into_up")
	if [ "$#" -ne 3 ]; then
		echo "[!] missing #SR and/or #UP" >&2
		exit 3
	fi
	if [[ ! $2 =~ ^[0-9]{6}$ ]]; then
		echo "[!] SR should be a 6-digit number" >&2
		exit 4
	fi
	if [[ ! $3 =~ ^[0-9]{5}$ ]]; then
		echo "[!] UP should be a 5-digit number" >&2
		exit 5
	fi
	echo "[i] isc rq setincident $2 $3"
	read -p "[?] Are you sure? " -n 1 -r
	echo
	if [[ "$REPLY" =~ ^[yY]$ ]]; then
		result=$($isc rq setincident "$2" "$3")
		echo "$?: $result"
	fi
	if [ "$?" -ne 0 ]; then
		echo "[-] setincident failed" >&2
		exit 6
	fi
	echo "[i] isc rq accept -m 'merge' $2"
	read -p "[?] Are you sure? " -n 1 -r
	echo
	if [[ "$REPLY" =~ ^[yY]$ ]]; then
		result=$($isc rq accept -m 'merge' "$2")
		echo "$?: $result"
	fi
;;
"up_status")
	if [ "$#" -ne 2 ]; then
		echo "[!] missing #UP" >&2
		exit 3
	fi
	if [[ ! $2 =~ ^[0-9]{5}$ ]]; then
		echo "[!] UP should be a 5-digit number" >&2
		exit 4
	fi
	result=$($isc r SUSE:Maintenance:"$2")
	echo "$?:"
	echo "$result"
;;
"create_rr")
	if [ "$#" -ne 2]; then
		echo "[!] missing #UP" >&2
		exit 3
	fi
	if [[ ! $2 =~ ^[0-9]{5}$ ]]; then
		echo "[!] UP should be a 5-digit number" >&2
		exit 4
	fi
	echo "[i] isc omg rr --incident $2"
	read -p "[?] Are you sure? " -n 1 -r
	echo
	if [[ "$REPLY" =~ ^[yY]$ ]]; then
		$($isc omg rr --incident "$2")
	fi
;;
*)
	echo "[!] unsupported op" >&2
	exit 2
;;
esac

