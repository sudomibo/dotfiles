#!/usr/bin/env bash

set -uo pipefail

declare -a PREREQS=("rpm")
declare -F requires &>/dev/null && requires || exit 1

if [ "$#" -ne 1 ]; then
	echo "[!] missing search argument" >&2
	exit 2
fi

loc=$(type -p "$1")
if [ "$?" -ne 0 ]; then
	echo "[-] path not found" >&2
	exit 3
fi
if [ -z "$loc" ]; then
	echo "[-] path not found" >&2
	exit 4
fi

package=$(rpm -qf "$loc")
if [ "$?" -ne 0 ]; then
	echo "[-] package not found" >&2
	exit 5
fi
echo "[+] found package: $package"

